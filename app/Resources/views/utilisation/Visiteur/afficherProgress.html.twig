<br>
<div id="viewResult" class="tableProgressBar container viewResult" >
    <!--<h2 class="text-center">Scroll down the page a bit</h2><br><br>

     -->

    <div class="row">
        <div class="col-md-6">    <br>
            <div class="row">
                <div class="col-md-12 col-lg-12">

                    <div class="barWrapper">
                        {% set pourcentTotal =  0  %}

                        {% for candidat in candidatesPart1 %}
                            {% set tmp =0 %}
                            {% for vote in votes %}
                                {% if vote.candidat.id == candidat.id %}
                                    {% set tmp = tmp + vote.nbVotes %}
                                {% endif %}
                            {% endfor %}

                            {% if totalValablementExprime == 0  %}
                                {% set pourcent =  0  %}
                            {% else %}
                                {% set pourcent =  ((tmp/totalValablementExprime)*100)|number_format(2, '.', ',')  %}
                            {% endif %}
                            {% if totalNonValablementExprime == 0  %}
                                {% set pourcentNonValablementExprime =  0  %}
                            {% else %}
                                {% set pourcentNonValablementExprime =  ((tmp/totalAttendu)*100)|number_format(2, '.', ',')  %}
                            {% endif %}


                            {% if candidat.id == meneur.id %}
                                <span class="progressText"><B> <div class="fa fa-trophy "></div>{{ candidat.name }}, {{ tmp }} votes</B></span>
                            {% else %}
                                {% if candidat.id == leader2.id %}
                                    <span class="progressText"><B><div class="fa fa-bolt bolt "></div>{{ candidat.name }}, {{ tmp }} votes</B></span>
                                {% else %}
                                    <span class="progressText"><B>{{ candidat.name }}, {{ tmp }} votes</B></span>
                                {% endif %}

                            {% endif %}




                            {% if candidat.parti != null %}
                                <MM style="border-bottom: solid 3px {{ candidat.parti.color }};">{{ candidat.parti.name }}</MM>
                            {% endif %}
                            <div class="progress">
                                {% if candidat.blanc or candidat.nul %}
                                    <div class="progress-bar blancNulProgressBar" role="progressbar" aria-valuenow="{{ pourcentNonValablementExprime }}" aria-valuemin="0" aria-valuemax="100" >
                                        <span  class="popOver" data-toggle="tooltip" data-placement="top" title="{{ pourcentNonValablementExprime }}%"> </span>
                                    </div>

                                {% else %}
                                    <div class="progress-bar" role="progressbar" aria-valuenow="{{ pourcent }}" aria-valuemin="0" aria-valuemax="100" >
                                        <span  class="popOver" data-toggle="tooltip" data-placement="top" title="{{ pourcent }}%"> </span>
                                    </div>

                                {% endif %}

                            </div>

                        {% endfor %}




                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6">    <br>
            <div class="row">
                <div class="col-md-12 col-lg-12">

                    <div class="barWrapper">
                        {% set pourcentTotal =  0  %}

                        {% for candidat in candidatesPart2 %}
                            {% set tmp =0 %}
                            {% for vote in votes %}
                                {% if vote.candidat.id == candidat.id %}
                                    {% set tmp = tmp + vote.nbVotes %}
                                {% endif %}
                            {% endfor %}

                            {% if totalValablementExprime == 0  %}
                                {% set pourcent =  0  %}
                            {% else %}
                                {% set pourcent =  ((tmp/totalValablementExprime)*100)|number_format(2, '.', ',')  %}
                            {% endif %}
                            {% if totalNonValablementExprime == 0  %}
                                {% set pourcentNonValablementExprime =  0  %}
                            {% else %}
                                {% set pourcentNonValablementExprime =  ((tmp/totalAttendu)*100)|number_format(2, '.', ',')  %}
                            {% endif %}



                            {% if candidat.id != meneur.id %}
                                <span class="progressText"><B> {{ candidat.name }}, {{ tmp }} votes</B></span>
                            {% else %}
                                <span class="progressText"><B><div class="fa fa-trophy "></div>{{ candidat.name }}, {{ tmp }} votes</B></span>
                            {% endif %}
                            {% if candidat.parti != null %}
                                <MM style="border-bottom: solid 3px {{ candidat.parti.color }};">{{ candidat.parti.name }}</MM>
                            {% endif %}
                            <div class="progress">
                                {% if candidat.blanc or candidat.nul %}
                                    <div class="progress-bar blancNulProgressBar" role="progressbar" aria-valuenow="{{ pourcentNonValablementExprime }}" aria-valuemin="0" aria-valuemax="100" >
                                        <span  class="popOver" data-toggle="tooltip" data-placement="top" title="{{ pourcentNonValablementExprime }}%"> </span>
                                    </div>

                                {% else %}
                                    <div class="progress-bar" role="progressbar" aria-valuenow="{{ pourcent }}" aria-valuemin="0" aria-valuemax="100" >
                                        <span  class="popOver" data-toggle="tooltip" data-placement="top" title="{{ pourcent }}%"> </span>
                                    </div>

                                {% endif %}

                            </div>

                        {% endfor %}




                    </div>
                </div>
            </div>


        </div>
    </div>



    {% if totalAttendu == 0  %}
        {% set pourcentTotal =  "na"  %}
    {% else %}
        {% set pourcentTotal =  ((total/totalAttendu)*100)|number_format(2, '.', ',')  %}
    {% endif %}






    <div class="row">
        <div class="col-md-12">    <br>
            <div class="row">
                <div class="col-md-12 col-lg-12">

                    <div class="barWrapper">
                        <span class="progressText"><B> Total / Signature, {{ total }} votes sur {{ totalAttendu }} signatures</B></span>

                        <div class="progress">

                            <div class="progress-bar progressbarTotal progress-bar-custom" role="progressbar" aria-valuenow="{{ pourcentTotal }}" aria-valuemin="0" aria-valuemax="100" >
                                <span  class="popOver" data-toggle="tooltip" data-placement="top" title="{{ pourcentTotal }}%"> </span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>


        .progress {background: rgba(135, 119, 119, 1); border: 0px solid rgba(245, 245, 245, 1); border-radius: 4px; height: 20px;}
        .progress-bar-custom {background: rgba(66, 139, 202, 1);}
         .progress-bar-custom {background-color: rgba(66, 139, 202, 1); background-image: -webkit-gradient(linear,0 100%,100% 0,color-stop(0.25,rgba(255, 255, 255, 0.15),color-stop(0.25,transparent),color-stop(0.5,transparent),color-stop(0.5,rgba(255, 255, 255, 0.15)),color-stop(0.75,rgba(255, 255, 255, 0.15)),color-stop(0.75,transparent),to(transparent))); background-image: -webkit-linear-gradient(45deg,rgba(255, 255, 255, 0.15) 25%,transparent 25%,transparent 50%,rgba(255, 255, 255, 0.15) 50%,rgba(255, 255, 255, 0.15) 75%,transparent 75%,transparent); background-image: linear-gradient(45deg,rgba(255, 255, 255, 0.15) 25%,transparent 25%,transparent 50%,rgba(255, 255, 255, 0.15) 50%,rgba(255, 255, 255, 0.15) 75%,transparent 75%,transparent); background-size: 40px 40px;}


        .tooltip{
            position:relative;
            float:right;
        }
        .tooltip > .tooltip-inner {background-color: #eebf3f; padding:5px 15px; color:rgb(23,44,66); font-weight:bold; font-size:13px;}
        .popOver + .tooltip > .tooltip-arrow {	border-left: 5px solid transparent; border-right: 5px solid transparent; border-top: 5px solid #eebf3f;}

        section{
            margin:100px auto;
            height:1000px;
        }

        .progressbarTotal{
            background: rgb(8, 100, 95);
            -webkit-transition: width 0s ease-in-out;
            transition: width 0s ease-in-out;
        }
    </style>

